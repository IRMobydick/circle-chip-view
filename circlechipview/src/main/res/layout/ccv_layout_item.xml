<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/ccv_root_height"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:foregroundGravity="center_vertical">

    <TextView
        android:id="@+id/cvv_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ccv_label_height"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/ccv_label_padding_default"
        android:paddingRight="@dimen/ccv_label_padding_default"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Test"
    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvv_icon"
        android:layout_width="@dimen/ccv_root_height"
        android:layout_height="@dimen/ccv_root_height"
        app:civ_border_color="#F4F4F4"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:civ_fill_color="#FFFFFF"/>

</FrameLayout>